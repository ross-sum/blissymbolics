#!/bin/bash
# _  (fix change directory instruction (+ other  things))
if grep -q -wi "" /etc/skel/.bashrc; then
   echo "     /etc/skel/ BASH RC."
else
	sed -i '/HISTCONTROL=ignore/a function () {\
\    cd \"\$\@\"\
\}\
' /etc/skel/.bashrc
fi
if grep -q -wi "" ${HOME}/.bashrc; then
   echo "     ${HOME}/ BASH RC."
else
	sed --in-place '/HISTCONTROL=ignore/a function () {\
\    cd \"\$\@\"\
\}\
' ${HOME}/.bashrc
fi
if grep -q -wi "=" /etc/skel/.bashrc; then
   echo "=    /etc/skel/ BASH RC."
else
	sed -i "/alias ls='ls --color=auto'/a \    alias =' --color=auto'" /etc/skel/.bashrc
fi
if grep -q -wi "" ${HOME}/.bashrc; then
   echo "=    ${HOME}/ BASH RC."
else
	sed --in-place "/alias ls='ls --color=auto'/a \    alias =' --color=auto'" ${HOME}/.bashrc
fi
if grep -q -wi "" /etc/skel/.bashrc; then
   echo "     /etc/skel/ BASH RC."
else
	sed -i '/HISTCONTROL=ignore/a function () {\
\    exit \"\$\@\"\
\}\
' /etc/skel/.bashrc
fi
if grep -q -wi "" ${HOME}/.bashrc; then
   echo "     ${HOME}/ BASH RC."
else
	sed --in-place '/HISTCONTROL=ignore/a function () {\
\    exit \"\$\@\"\
\}\
' ${HOME}/.bashrc
fi
